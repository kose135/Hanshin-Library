<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkPurple">

            <ImageButton
                android:id="@+id/btnBack1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="@color/darkPurple"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="도서관 이용 안내"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

        </RelativeLayout>


        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </TabWidget>


        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ◎ 개관 시간 "
                    android:textSize="15dp"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/open1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text=" ☞ 폐관시간 10분전부터는 자료실 정리 시간입니다. "
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" ☞ 휴관일 : 토·일요일, 국정 공휴일, 개교기념일 및 기타 관장"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      이 휴관이 필요하다고 인정할 때를 휴관일로 한다. "
                    />



            </LinearLayout>



            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" ◎  동관 1F "
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/f1e"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" ◎  동관 2F "
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/f2e"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" ◎  동관 3F "
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/f3e"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" ◎  동관 4F "
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/f4e"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" ◎  서관 3F "
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/f3ea"
                    />




                    </LinearLayout>












            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=" ◎  대출자료수 및 대출 기간 "
                    android:textSize="15dp"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/loan1"
                    />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textSize="15dp"
                        android:text=" ◎ 반납"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text=" ☞ 반납 확인 "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="       - 대출한 자료를 반납할 때는 자료를 반납 카운터에 \n         제출하거나 자동반납기를 이용하며 반납 처리 여부를 \n         모니터와 반납 확인증(자동반납기)을 통해 반드시 확인한\n         다.(반납 미처리로 인한 연체 시 본인이 책임) "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" ☞ 대출 연기 "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="       - 대출 기간을 연장하고자 할 때는 1회에 한하여 \n         중앙도서관 홈페이지 상에서 갱신할 수 있다."
                        />


                </LinearLayout>
            </LinearLayout>




                <LinearLayout
                    android:id="@+id/tabEtc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textSize="15dp"
                        android:text=" ◎ 도서관 자료 소장 위치"
                        />

                    <ImageView
                        android:id="@+id/ect1"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ect1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textSize="15dp"
                        android:text=" ◎ 도서 배열"
                        />

                    <ImageView
                        android:id="@+id/ect2"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/ect2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textSize="15dp"
                        android:text=" ◎ 기타 안내"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=" ☞ 타 대학(기관) 도서관 이용 "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="       - 본교 도서관에 소장되지 않은 자료를 다른 대학 도서관,\n         공공 도서관등에서 이용하고자 할 때는 중앙 도서관에 \n         문의하여 방문하면 편리를 제공받을 수 있다."
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=" ☞ 다독자 포상 "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="       - 매년 9월 ~ 10월에 독후감 공모전을 실시합니다.\n          많은 학생들이 참가하고 있으며 그 수준도\n          점점 높아지고 있다."
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text=" ☞ 학과지정 도서 코너(2층 지정자료실) "
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="       - 수업 진행에 필요한 참고도서를 지정하여 대출을 \n          제한함으로써 해당 수업을 수강하는 학생들이 관내열람 \n          및 복사하여 이용할 수 있도록 학과지정도서 코너에 \n          비치한다."
                        />



                </LinearLayout>




            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</TabHost>